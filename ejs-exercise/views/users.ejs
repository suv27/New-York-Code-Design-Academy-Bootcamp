<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Users</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>

<body>
  <div class="container">
    <%- include('partials/nav') %>
    <div class="jumbotron">
      <image src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/12/User_icon_2.svg/120px-User_icon_2.svg.png" id="logo" />
      <h1>All My Users</h1>
      <p class="lead"></p>
    </div>

    <div class="row">
      <div class="col-lg-12">

        <div class="usersIN">

          <h1>Users in Database</h1>
          <table>
            <tr>
              <th>ID</th>
              <th>Email</th>
              <th>States</th>
            </tr>
            <tr>
              <% for(var i = 0; i < userdata.length; i++) { %>
                <td>
                  <%= userdata[i].id %>
                </td>
                <td>
                  <%= userdata[i].email %>
                </td>
                <td>
                  <%= userdata[i].states %>
                </td>
            </tr>
            <% } %>
          </table>

        </div>

        <div class="login">
            <h1>Login</h1>
            <form class="register" action="post" method="POST">

              <div class="info">
                <!-- ID -->
                <div>
                  <label for="InputID">ID</label>
                  <input type="number" id="InputID" placeholder="Your ID" name="id" required="true">
                </div>

                <!-- EMAIL -->
                <div>
                  <label for="InputEmail">Email</label>
                  <input type="email" id="InputEmail" placeholder="Your Email" name="email" required="true">
                </div>
              </div>

              <br>
              <div class="country">
                <label>Country</label>
                <select id="ctry" name="country">
                  <option value="CH">Choose Country</option>
                  <option value="USA">USA</option>
                  <option value="D.R.">DOM. Rep</option>
                </select>
              </div>
              <br>
              <div class="display">
                <label>States</label>
                <select id="stts" name="states">
                  <option value="chState">Choose a State</option>
                </select>
              </div>

              <div class="submitDiv">
                <input type="submit" value="submit">
              </div>
            </form>

          </div>
        </div>

      <%- include('partials/footer') %>
    </div>

  </div>
</body>

</html>
